from conary.lib import log

loadSuperClass('group-appliance=conary.rpath.com@rpl:2')
class GroupDevimageAppliance(ApplianceGroupRecipe):
    name = 'group-devimage-appliance'
    version = '5.8.0'

    groupLabel = 'conary.rpath.com@rpl:2-py26-devel'
    rpmLabel = 'conary.rpath.com@rpl:2-py26-devel'

    devLabel = 'devimage.rpath.org@rpath:devimage-5.8-devel'

